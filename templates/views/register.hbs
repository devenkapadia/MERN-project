<!DOCTYPE html>
<html lang="en">

<head>
    {{>header}}
</head>

<body>
    {{>navbar}}
    <form action="/register" method="post">
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" name="name" class="form-control">
        </div>
        <div class="mb-3">
            <label class="form-label">Email address</label>
            <input type="email" name="email" class="form-control">
        </div>

        <div class="mb-3 form-check">
            <input class="form-control form-check-input" type="radio" name="gender" value="male" checked>
            <label class="form-label form-check-label">
                Male
            </label>
        </div>
        <div class="mb-3 form-check">
            <input class="form-control form-check-input" type="radio" name="gender" value="female">
            <label class="form-label form-check-label">
                Female
            </label>
        </div>
        <div class="mb-3">
            <label class="form-label">Phone</label>
            <input type="text" name="phone" minlength="10" maxlength="10" class="form-control">
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Password</label>
            <input type="password" name="password" class="form-control">
        </div>
        <div class="mb-3">
            <label class="form-label">Confirm Password</label>
            <input type="password" name="confirmpassword" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary" value="Register">Submit</button>
    </form>
</body>

</html>